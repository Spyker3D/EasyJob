<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RegularText">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="RegularText.12size">
        <item name="android:textSize">@dimen/text_size_12</item>
    </style>

    <style name="RegularText.16size">
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="MediumText">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="MediumText.16size">
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="MediumText.22size">
        <item name="android:textSize">@dimen/text_size_22</item>
    </style>

    <style name="MediumText.32size">
        <item name="android:textSize">@dimen/text_size_32</item>
    </style>

    <style name="MediumText.TypographyText">
        <item name="android:textColor">@color/Gray</item>
        <item name="android:textSize">@dimen/text_size_22</item>
    </style>

    <style name="BoldText">
        <item name="android:fontFamily">@font/ys_display_bold</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="BoldText.32size">
        <item name="android:textSize">@dimen/text_size_32</item>
    </style>

    <style name="BottomNavigationText" parent="RegularText.12size">
        <item name="itemTextColor">@color/bottom_navigation_color</item>
        <item name="itemIconTint">@color/bottom_navigation_color</item>
        <item name="fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:lines">1</item>
        <item name="android:maxLength">200</item>
        <item name="android:inputType">textNoSuggestions</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/Gray_OR_White</item>
        <item name="android:textColor">@color/Black</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="SuggestionsStyle" parent="EditTextStyle">
        <item name="android:imeOptions">actionNone</item>
        <item name="android:inputType">none</item>
        <item name="android:background">@color/Light_Gray_OR_Gray</item>
    </style>
    <style name="BackButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">@dimen/dp48</item>
        <item name="android:layout_height">@dimen/dp48</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="CheckBoxStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/Blue</item>
        <item name="android:color">@color/Blue</item>
        <item name="android:colorMultiSelectHighlight">@color/Blue</item>
        <item name="android:colorActivatedHighlight">@color/Blue</item>
        <item name="colorControlActivated">@color/Blue</item>
        <item name="android:padding">0dp</item>
    </style>

</resources>
